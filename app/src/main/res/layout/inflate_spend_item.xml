<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding8"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/padding8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tvMoneyIn"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/pt_sans_caption_bold"
            android:text="20.00 â‚¹"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/tvSponsorName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@id/tvMoneyIn"
            android:layout_toStartOf="@id/tvMoneyIn"
            android:fontFamily="@font/pt_sans"
            android:text="Sponsor"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSponsorName"
            android:layout_marginTop="@dimen/padding8"
            android:text="@string/app_name"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/tvConsumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDate"
            android:layout_marginTop="@dimen/padding8"
            android:fontFamily="@font/pt_sans"
            android:text="Consumers :"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/vConsumers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvConsumer"
            android:layout_marginTop="@dimen/padding5"
            android:orientation="vertical"
            android:textColor="@color/colorText" />

    </RelativeLayout>

</android.support.v7.widget.CardView>